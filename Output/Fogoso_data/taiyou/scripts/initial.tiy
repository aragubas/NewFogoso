# Initial Script
# ================
# This script is called when Fogoso Engine starts.
Var "Int", "LoopCount", "0";

Jump "main"; 
  
$FUNCTION "main";
    HaltIfEqual "#LoopCount$", "==", "10";

    WriteLine "Hello World from the #LoopCount$ time.";

    IntegerOperation "LoopCount", "+", "#1";

    Jump "main";
$END
 
  
